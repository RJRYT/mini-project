                    width="60">
            </div>
            <% } %>
                <!-- Navbar -->
                <nav class="main-header navbar navbar-expand navbar-white navbar-light">
                    <!-- Left navbar links -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i
                                    class="fas fa-bars"></i></a>
                        </li>
                        <li class="nav-item d-none d-sm-inline-block">
                            <a href="/" class="nav-link">Home</a>
                        </li>
                        <li class="nav-item d-none d-sm-inline-block">
                            <a href="/dashboard/profile" class="nav-link">Profile</a>
                        </li>
                        <li class="nav-item d-none d-sm-inline-block">
                            <a href="/dashboard" class="nav-link">Dashboard</a>
                        </li>
                    </ul>

                    <!-- Right navbar links -->
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                <img src="/drive/image/<%= user.ProfilePic %>" class="user-image img-circle elevation-2" alt="User Image" style="height: 20px;">
                                <span class="d-none d-md-inline"><%=name%></span>
                              </a>
                            <div class="dropdown-menu dropdown-menu-sm dropdown-menu-right">
                                <a href="/dashboard/profile" class="dropdown-item">
                                    <i class="fas fa-user"></i> Profile
                                </a>
                                <a href="/dashboard/result" class="dropdown-item">
                                    <i class="fas fa-poll"></i> Result
